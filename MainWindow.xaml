<Window
    x:Name="RootWindow"
    x:Class="Datamerge.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Datamerge.Models"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:local="using:Datamerge"
    mc:Ignorable="d">

    <Window.SystemBackdrop>
        <MicaBackdrop Kind="BaseAlt"/>
    </Window.SystemBackdrop>

    <Grid x:Name="RootGrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Height="44" Background="Transparent" ColumnSpacing="10" Padding="15,0,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Datamerge" VerticalAlignment="Center" FontSize="12" Opacity="0.5" Grid.Column="1"/>
        </Grid>

        <Grid Grid.Row="1" Padding="24,0,24,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <StackPanel>
                <TextBlock Text="Consolidación de Datos" Style="{StaticResource TitleTextBlockStyle}" FontSize="24" FontWeight="SemiBold"/>
                <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,12,0,0">
                    <Button x:Name="BtnConfig" Content="Configuración" Tag="Config" Click="Tab_Click" Width="120"/>
                    <Button x:Name="BtnPreview" Content="Vista Previa" Tag="Preview" Click="Tab_Click" Width="120"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal" Spacing="10" VerticalAlignment="Bottom" 
                        Visibility="{x:Bind ViewModel.IsBusyVisibility, Mode=OneWay}">
                <ProgressRing IsActive="True" Width="20" Height="20"/>
                <TextBlock Text="Procesando..." VerticalAlignment="Center" Foreground="{ThemeResource SystemAccentColor}"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="2" Padding="24,0,24,12">

            <Grid x:Name="ConfigPanel" ColumnSpacing="24" VerticalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" VerticalAlignment="Stretch"
                      Background="{ThemeResource LayerFillColorDefaultBrush}" 
                      CornerRadius="8" Padding="16" 
                      BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="1. Archivos Origen" Style="{StaticResource SubtitleTextBlockStyle}" Margin="0,0,0,16"/>

                    <Border Grid.Row="1" BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" CornerRadius="4" Background="{ThemeResource LayerFillColorAltBrush}">
                        <ListView ItemsSource="{x:Bind ViewModel.Files}" SelectionMode="None">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="models:FileInfoModel">
                                    <Grid Padding="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <FontIcon Glyph="&#xE8E5;" FontFamily="Segoe MDL2 Assets" Foreground="{ThemeResource SystemAccentColor}" Margin="0,0,12,0" FontSize="16"/>
                                        <TextBlock Grid.Column="1" Text="{x:Bind FileName}" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{x:Bind FileName}" VerticalAlignment="Center"/>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Border>

                    <Button Grid.Row="2" Margin="0,16,0,0" HorizontalAlignment="Stretch" Command="{x:Bind ViewModel.PickFilesCommand}" Style="{StaticResource AccentButtonStyle}">
                        <StackPanel Orientation="Horizontal" Spacing="8">
                            <SymbolIcon Symbol="Add"/>
                            <TextBlock Text="Añadir Archivos"/>
                        </StackPanel>
                    </Button>
                </Grid>

                <Grid Grid.Column="1" VerticalAlignment="Stretch"
                      Background="{ThemeResource LayerFillColorDefaultBrush}" 
                      CornerRadius="8" Padding="16" 
                      BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Margin="0,0,0,16">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="2. Organizar Columnas" Style="{StaticResource SubtitleTextBlockStyle}"/>
                            <TextBlock Text="{x:Bind ViewModel.TargetColumnInfo, Mode=OneWay}" FontSize="12" Opacity="0.7" Foreground="{ThemeResource SystemAccentColor}"/>
                        </StackPanel>
                        <Button Grid.Column="1" Command="{x:Bind ViewModel.AddCustomColumnCommand}">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <SymbolIcon Symbol="Add"/>
                                <TextBlock Text="Crear Columna"/>
                            </StackPanel>
                        </Button>
                    </Grid>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="8" Margin="0,0,0,12">
                        <Button Content="Todas" Command="{x:Bind ViewModel.SelectAllColumnsCommand}" FontSize="12" Padding="10,4"/>
                        <Button Content="Ninguna" Command="{x:Bind ViewModel.DeselectAllColumnsCommand}" FontSize="12" Padding="10,4"/>
                        <Button Command="{x:Bind ViewModel.InjectEmptyColumnsCommand}" Background="{ThemeResource SystemControlBackgroundChromeMediumLowBrush}" Padding="10,4">
                            <StackPanel Orientation="Horizontal" Spacing="6">
                                <SymbolIcon Symbol="List"/>
                                <TextBlock Text="Insertar Sub/Pago/Legal"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Border Grid.Row="2" BorderThickness="1" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" CornerRadius="4" Background="{ThemeResource LayerFillColorAltBrush}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" Padding="12,8" Background="{ThemeResource LayerFillColorDefaultBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="#" Grid.Column="0" Opacity="0.5" Width="32" TextAlignment="Center" FontSize="12"/>
                                <TextBlock Text="Nombre Columna / Origen" Grid.Column="1" Opacity="0.5" FontSize="12" Margin="4,0,0,0"/>
                                <TextBlock Text="Orden" Grid.Column="2" Opacity="0.5" FontSize="12" Margin="0,0,12,0"/>
                                <TextBlock Text="Acción" Grid.Column="3" Opacity="0.5" FontSize="12"/>
                            </Grid>

                            <ListView x:Name="ColumnsListView"
                                      Grid.Row="1" 
                                      ItemsSource="{x:Bind ViewModel.Columns}" 
                                      CanReorderItems="True" AllowDrop="True"
                                      DragItemsStarting="ColumnsListView_DragItemsStarting"
                                      SelectionMode="None">
                                <ListView.ItemTemplate>
                                    <DataTemplate x:DataType="models:ColumnItem">
                                        <Grid Padding="8,6" Background="{x:Bind RowBackground, Mode=OneWay}" CornerRadius="4" Margin="0,2">

                                            <Grid.ContextFlyout>
                                                <MenuFlyout>
                                                    <MenuFlyoutItem Text="Renombrar Columna" Icon="Edit" Command="{Binding ElementName=RootWindow, Path=ViewModel.StartRenamingCommand}" CommandParameter="{Binding}"/>
                                                    <MenuFlyoutSeparator/>
                                                    <MenuFlyoutItem Text="Fijar como Destino" Icon="Pin" Command="{Binding ElementName=RootWindow, Path=ViewModel.SetAsTargetCommand}" CommandParameter="{Binding}"/>
                                                    <MenuFlyoutItem Text="Cancelar Selección" Icon="Cancel" Command="{Binding ElementName=RootWindow, Path=ViewModel.SetAsTargetCommand}" CommandParameter="{Binding}" Visibility="{x:Bind IsTargetMode, Mode=OneWay}"/>
                                                </MenuFlyout>
                                            </Grid.ContextFlyout>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <CheckBox IsChecked="{x:Bind IsSelected, Mode=TwoWay}" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,12,0"/>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Spacing="2">
                                                <StackPanel Orientation="Horizontal" Spacing="8" Visibility="{x:Bind IsTargetMode, Mode=OneWay}">
                                                    <FontIcon Glyph="&#xE718;" FontSize="12" Foreground="{ThemeResource SystemAccentColor}"/>
                                                    <TextBlock Text="COLUMNA DESTINO" FontSize="10" Foreground="{ThemeResource SystemAccentColor}" FontWeight="Bold"/>
                                                </StackPanel>

                                                <Grid Visibility="{x:Bind NameReadVisibility, Mode=OneWay}">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel>
                                                        <TextBlock Text="{x:Bind HeaderName}" FontWeight="SemiBold" FontSize="14" TextTrimming="CharacterEllipsis"/>

                                                        <Button Content="{x:Bind SourceInfo, Mode=OneWay}" 
                                                                FontSize="11" Opacity="0.5" 
                                                                Background="Transparent" BorderThickness="0" Padding="0" Margin="0"
                                                                Height="Auto" MinHeight="0" HorizontalAlignment="Left"
                                                                ToolTipService.ToolTip="Clic para gestionar uniones">
                                                            <Button.Flyout>
                                                                <Flyout Placement="Bottom">
                                                                    <StackPanel Width="320" Spacing="8">
                                                                        <TextBlock Text="Fuentes unidas en esta columna:" FontWeight="Bold" Opacity="0.8"/>
                                                                        <Border Height="1" Background="{ThemeResource SurfaceStrokeColorDefaultBrush}"/>

                                                                        <ItemsControl ItemsSource="{x:Bind MappingsList, Mode=OneWay}">
                                                                            <ItemsControl.ItemTemplate>
                                                                                <DataTemplate>
                                                                                    <Grid Margin="0,4">
                                                                                        <Grid.ColumnDefinitions>
                                                                                            <ColumnDefinition Width="*"/>
                                                                                            <ColumnDefinition Width="Auto"/>
                                                                                        </Grid.ColumnDefinitions>

                                                                                        <StackPanel Grid.Column="0" Margin="0,0,8,0">
                                                                                            <TextBlock Text="{Binding Key}" FontSize="10" Opacity="0.6" TextTrimming="CharacterEllipsis" ToolTipService.ToolTip="{Binding Key}"/>
                                                                                            <TextBlock Text="{Binding Value}" FontSize="12" FontWeight="SemiBold"/>
                                                                                        </StackPanel>

                                                                                        <Button Grid.Column="1" Margin="8,0,0,0" Padding="6" Background="Transparent" BorderThickness="0"
                                                                                                Command="{Binding ElementName=RootWindow, Path=ViewModel.DetachMappingCommand}"
                                                                                                CommandParameter="{Binding}"
                                                                                                ToolTipService.ToolTip="Separar esta columna">
                                                                                            <SymbolIcon Symbol="Delete" Foreground="#FF5555"/>
                                                                                        </Button>
                                                                                    </Grid>
                                                                                </DataTemplate>
                                                                            </ItemsControl.ItemTemplate>
                                                                        </ItemsControl>
                                                                    </StackPanel>
                                                                </Flyout>
                                                            </Button.Flyout>
                                                        </Button>

                                                        <TextBlock Text="{x:Bind DefaultValue}" Visibility="{x:Bind CustomVisibility, Mode=OneWay}" FontSize="11" Foreground="{ThemeResource SystemAccentColor}" Opacity="0.8"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="1" Command="{Binding ElementName=RootWindow, Path=ViewModel.StartRenamingCommand}" CommandParameter="{Binding}"
                                                            Background="Transparent" BorderThickness="0" Padding="6" Margin="4,0,0,0" ToolTipService.ToolTip="Renombrar Columna">
                                                        <FontIcon Glyph="&#xE70F;" FontSize="12" Opacity="0.4"/>
                                                    </Button>
                                                </Grid>

                                                <Grid Visibility="{x:Bind NameEditVisibility, Mode=OneWay}" ColumnSpacing="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <StackPanel Spacing="4">
                                                        <TextBox Text="{x:Bind HeaderName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" PlaceholderText="Nombre de Columna"/>
                                                        <TextBox Text="{x:Bind DefaultValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Visibility="{x:Bind CustomVisibility, Mode=OneWay}" PlaceholderText="Valor Fijo (Relleno)"/>
                                                    </StackPanel>

                                                    <Button Grid.Column="1" Command="{Binding ElementName=RootWindow, Path=ViewModel.FinishRenamingCommand}" CommandParameter="{Binding}"
                                                            Style="{StaticResource AccentButtonStyle}" Padding="8" ToolTipService.ToolTip="Guardar Nombre">
                                                        <SymbolIcon Symbol="Accept"/>
                                                    </Button>
                                                </Grid>
                                            </StackPanel>

                                            <Grid Grid.Column="2" Margin="12,0,4,0" Padding="8" Background="Transparent" PointerPressed="Handle_PointerPressed" PointerReleased="Handle_PointerReleased" PointerCanceled="Handle_PointerReleased" local:CursorHelper.Cursor="SizeAll">
                                                <FontIcon Glyph="&#xE700;" FontFamily="Segoe MDL2 Assets" Opacity="0.4" FontSize="12"/>
                                            </Grid>

                                            <StackPanel Grid.Column="3" Orientation="Horizontal">
                                                <Button Command="{Binding ElementName=RootWindow, Path=ViewModel.MergeIntoTargetCommand}" 
                                                        CommandParameter="{Binding}" 
                                                        Visibility="{x:Bind MergeButtonVisibility, Mode=OneWay}"
                                                        Background="{ThemeResource SystemAccentColor}" Foreground="White"
                                                        BorderThickness="0" Padding="8" Margin="0,0,4,0"
                                                        ToolTipService.ToolTip="Unir a la columna Destino seleccionada">
                                                    <StackPanel Orientation="Horizontal" Spacing="6">
                                                        <FontIcon Glyph="&#xE71B;" FontFamily="Segoe MDL2 Assets"/>
                                                        <TextBlock Text="Unir"/>
                                                    </StackPanel>
                                                </Button>

                                                <Button Visibility="{x:Bind DeleteButtonVisibility, Mode=OneWay}" Command="{Binding ElementName=RootWindow, Path=ViewModel.RemoveColumnCommand}" CommandParameter="{Binding}" Background="Transparent" BorderThickness="0" Padding="8">
                                                    <SymbolIcon Symbol="Delete" Foreground="#FF5555"/>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </DataTemplate>
                                </ListView.ItemTemplate>
                            </ListView>
                        </Grid>
                    </Border>

                    <StackPanel Grid.Row="3" Spacing="15" Margin="0,16,0,0" Orientation="Horizontal">
                        <CheckBox IsChecked="{x:Bind ViewModel.GeneratePeriods, Mode=TwoWay}" Content="Generar Periodos"/>
                        <CheckBox IsChecked="{x:Bind ViewModel.CleanJobType, Mode=TwoWay}" Content="Limpiar 'Tipo de Trabajo'"/>
                    </StackPanel>
                </Grid>
            </Grid>

            <Grid x:Name="PreviewPanel" VerticalAlignment="Stretch" Visibility="Collapsed">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <CommandBar DefaultLabelPosition="Right" Background="Transparent" IsOpen="False">
                    <AppBarButton Icon="Refresh" Label="Actualizar Vista" Command="{x:Bind ViewModel.RefreshPreviewCommand}"/>
                </CommandBar>
                <controls:DataGrid x:Name="PreviewGrid" 
                                   Grid.Row="1"
                                   ItemsSource="{x:Bind ViewModel.PreviewSource, Mode=OneWay}"
                                   AutoGenerateColumns="False" 
                                   IsReadOnly="True"
                                   GridLinesVisibility="Horizontal"
                                   HeadersVisibility="Column"
                                   BorderThickness="1" 
                                   BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}"
                                   CornerRadius="4"
                                   VerticalAlignment="Stretch"/>
            </Grid>
        </Grid>

        <Border Grid.Row="3" Background="{ThemeResource LayerFillColorAltBrush}" BorderBrush="{ThemeResource SurfaceStrokeColorDefaultBrush}" BorderThickness="0,1,0,0" Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button Content="Limpiar Todo" Command="{x:Bind ViewModel.ClearAllCommand}" Foreground="#FF5555" Background="Transparent" BorderThickness="0"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal" Spacing="15">
                    <TextBlock Text="Listo para exportar" VerticalAlignment="Center" Visibility="{x:Bind ViewModel.IsNotBusy, Mode=OneWay}" Opacity="0.5"/>
                    <Button Content="Consolidar y Exportar" Style="{StaticResource AccentButtonStyle}" 
                            Command="{x:Bind ViewModel.ConsolidateCommand}"
                            IsEnabled="{x:Bind ViewModel.IsNotBusy, Mode=OneWay}"
                            Width="200" Height="36"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>